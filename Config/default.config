server {
    listen 8080;
    host 127.0.0.1;
    server_name myserver.com;

    error_page 404 /errors/404.html;
    client_max_body_size 10M;

    location / {
        root .;
        index ./index.html;
        allow_methods GET POST;
        directory_listing on;
    }

    location /upload {
        allow_methods POST;
        upload_store /var/www/uploads;
    }

    location /cgi-bin {
        cgi_pass ./a.out; 
        cgi_extensions .php .py;
    }

    location /redirect {
        redirect http://www.example.com;
    }
}
