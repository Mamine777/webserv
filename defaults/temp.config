server {
    listen 8080;
    host 127.0.0.1;
    server_name myserver.com;

    error_page 404 /errors/404.html;
    client_max_body_size 10000000;

    location / {
        root ./test;
        index index.html;
        allow_methods GET;
        directory_listing off;
    }

	location /index {
		root ./testIndex;
		allow_methods GET;
		directory_listing on;
	}
	
	location /upload {
		root ./uploads;
		allow_methods GET POST;
		directory_listing on;
		upload_store ./uploads
	}

	location /redirect {
		redirect https://google.com;
	}
}

server {
	listen 8081;
	host 127.0.0.1;
	server_name server1.com;

	error_page 404 /errors/404.html;
	client_max_body_size 10000000;

	location / {
		allow_methods GET;
		redirect https://google.com;
	}
	location /upload {
		allow_methods GET;
